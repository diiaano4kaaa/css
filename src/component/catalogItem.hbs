<div class="row">
    {{#each goodsList}}
    <div class="card mb-3 col-5 mx-2">
        <img class="card-img" src="{{img}}">
        <div class="card-body">
            <div>
                {{#if isHot}}<span class="badge text-bg-warning rounded-pill">Hot!</span>{{/if}}
                {{#if isNew}}<span class="badge text-bg-primary rounded-pill">New</span>{{/if}}
            </div>
            <div class=""> {{#if isFast}} <button class="btn btn-success mt-2">Швидка доставка</button>{{/if}}
            </div>
            <div> {{#if isFree}} <button class="btn btn-secondary my-2">Безкоштовна доставка</button>{{/if}}
            </div>
            <h4 class="my-2">{{name}}</h6>
                <p class="text-secondary my-3">{{review.amount}} {{review.text}}</p>
                <h4>{{price}}</h4>
                <div class="text-secondary my-3">{{delivery}}</div>

                {{#each buttons}}
                <button class="btn {{#if isPrimary}} btn-primary {{/if}} {{#if isSecondary}} btn-secondary {{/if}} my-1"
                    href="{{link}}">{{text}}</button>
                {{/each}}
                {{#each characteristics}}
                <ul class="mt-3">
                    <li>{{title}}: {{value}}</li>
                </ul>
                {{/each}}
        </div>
    </div>
    {{/each}}
</div>