{{#each goodsBlock}}
<div class="card m-3">
    <div class="row m-2">
        <div class="col-2"> <img class="card-img" src={{image}} style="max-width: 100px;"></div>
        <div class="col-4">
            <h6 class="card-title">{{name}}</h6>
            <div class="card-text text-secondary">{{description}}</div>
        </div>
        {{#with price}}
        <div class="col-1">{{title}} {{value}}</div>
        {{/with}}
        {{!-- price --}}
        <p class="col-1">{{amount}}</p>
        {{#each buttons}}
        <div class="col-3 m-0">
            {{#if isPrimary}}<button class="btn btn-primary">{{text}}</button> {{/if}}
            {{#if isDanger}} <button class="btn btn-outline-danger">{{text}}</button> {{/if}}
        </div>
        {{/each}}
        {{!-- buttons --}}
    </div>
</div>
{{/each}}
{{!-- goodsBlock --}}