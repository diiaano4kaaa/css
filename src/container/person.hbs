<div>
    {{#with person}}
    <h2><b> {{name}} </b></h2>
    <div> <b>Age:</b> {{age}}</div>
    <div><b>Gender:</b> {{gender}}</div>
    <hr>
    <div>
        {{> title data='My address' big=false}}
        {{#with address}}
        <div>{{street}}. {{city}}. {{state}}</div>
        <div>{{zip}}. {{country}}</div>
        {{/with}}
    </div>
    <hr>
    <div class="row mx-1">
        <ul class="list-group col-6">
            {{> title data='My education' big=false}}
            <li class="list-group-item"> {{#each education}}
                <div>Degree: {{degree}}</div>
            </li>
            <li class="list-group-item">
                <div>Major: {{major}}</div>
            </li>
            <li class="list-group-item">
                <div>University: {{university}}</div>
            </li>
            <li class="list-group-item">
                <div>Graduation year: {{graduationYear}}</div>
            </li>
            {{/each}}
    </div>
    <hr>
    <div>
        {{> title data='My work experience' big=false}}
        {{#each workExperience}}
        <strong>{{company}}</strong>
        <div>{{title}}</div>
        <div>from {{startDate}} to {{endDate}}</div>

        <div class="mt-3"><b>My responsibilities:</b> {{responsibilities}}</div>
        <div><b>Founded year:</b> {{year_founded}}</div>
        <div><b>Industry:</b> {{industry}}</div>
        {{#each employees}}
        <ul>
            <div><b>Працівники:</b></div>
            <li>{{name}}</li>
            <ul>
                <li class="my-2">
                    Position: {{position}}
                </li>
                <li class="my-2">
                    Department: {{department}}
                </li>

                <b class="my-3"> Projects:</b>
                <div class="mb-3">
                    {{#each projects}}
                    {{name}} <br>
                    {{description}}
                    {{status}}

                </div>


                <div class="my-3">
                    <b>Teams:</b>
                    {{#each teams}}
                    <div>Назва: <em> {{team_name}}</em></div>
                    <div> Team leader's name: {{team_leader.name}}</div>
                    <div>title: {{team_leader.title}}</div>
                    <div>email: {{team_leader.email}}</div>
                </div>

                <div class="mt-3">
                    {{#each team_members}}
                    <div><b>Team members:</b></div>
                    <div>Name: {{name}}</div>
                    <div>Title: {{title}}</div>
                    <div>Email: {{email}}</div>
                    <div>Skills: {{skills}}</div>

                    {{#each projects}}
                    <div class="mt-3"><b>Projects</b></div>
                    <div>Name: {{name}}</div>
                    <div>Description: {{description}}</div>
                    <div>Technologies: {{technologies}}</div>

                    {{#each team_members}}
                    <div class="mb-3">Name: {{name}}</div>
                    <div class="mt-0">Title: {{title}}</div>
                    {{/each}}
                    {{/each}}
                    {{/each}}
                    {{/each}}
                </div>
                {{/each}}
            </ul>
        </ul>
        {{/each}}
        {{/each}}
    </div>


    {{/with}}
</div>