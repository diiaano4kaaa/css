<div class="mx-4">
    <ol class="breadcrumb">
        {{#each breadcrumb}}
        <li class="breadcrumb-item">
            <a href="{{url}}">{{name}}</a>
        </li>
        {{/each}}
    </ol>
    <h2 class="mt-3">{{header}}</h2>
    <div class="row mt-3 mb-5">
        {{#each sortBlock}}
        <div class="col-3">
            <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
            </select>
        </div>
        {{/each}}
    </div>

    <div class="row">
        <div class="card col-3">
            <div class=" card-body m-2">
                {{#with filterBlock}}
                {{#with sellers}}
                <h6>{{title}}</h6>
                <div>
                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{value}}</label>
                        <intut class="form-check-input" type="checkbox"></intut>
                    </div>
                    {{/each}}
                </div>
                {{/with}}
                <hr>
                {{#with brands}}
                <h6>{{title}}</h6>
                <input class="text" placeholder="{{input.placeholder}}">
                {{#each options}}
                <div class="form-check mt-1">
                    <lable class="form-check-label">{{value}}</lable>
                    <input class="form-check-input" type="checkbox">
                </div>
                {{/each}}
                {{/with}}
                <hr>
                {{#with price}}
                <h6>{{title}}</h6>
                {{#with range}}
                <input type="text" placeholder="{{from}}" class="mb-3">
                <input type="text" placeholder="{{to}}">
                {{/with}}
                {{#with button}}
                <button class="btn btn-outline-secondary col-4 mt-3" href="{{link}}">{{text}}</button>
                {{/with}}
                {{/with}}
                <hr>
                <div>
                    {{#each filterList}}
                    <h6>{{title}}</h6>
                    <div class="form-check">
                        {{#each options}}
                        <label class="form-check-label">{{value}} </label>
                        <input class="form-check-input" type="checkbox">
                        {{/each}}
                    </div>
                    {{#if isLast}}
                    {{else}}
                    <hr>
                    {{/if}}
                    {{/each}}
                </div>
                {{/with}}
                {{!-- filterBlock --}}
            </div>
        </div>
        <div class="col-9">
            {{> catalogItem}}
        </div>
    </div>


</div>