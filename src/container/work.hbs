{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            <ul>

                <div>
                    {{> title data='Work history' big=true}}
                    {{#each works}}
                    <li>
                        <div>{{position}}</div>

                        <br>

                        <div>{{duration.from}} -
                            {{#if duration.to}}
                            {{duration.to}}
                            {{else}}
                            (ще працюю)
                            {{/if}}</div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link text=company.name
                            href=company.url blank=true noLine=true}}
                            {{else}}
                            <b>{{company.name}}</b>
                            {{/if}}

                        </div>
                        <br>
                        <br>
                        <div><strong>Project ({{projectAmount}})</strong></div>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                <div>{{about}}</div>
                                <br>
                                <div>Project stacks ({{stacksAmount}})</div>

                                {{#each stacks}}
                                <div> {{name}}</div>
                                {{/each}}
                                <br>
                                <em>Project awards</em>
                                {{#each awards}}
                                <div>{{name}} </div>
                                {{/each}}
                                <br>
                                {{/each}}
                            </li>
                        </ul>
                    </li>
                    {{/each}}
                </div>

            </ul>


        </section>

    </main>
    {{/with}}

</div>

